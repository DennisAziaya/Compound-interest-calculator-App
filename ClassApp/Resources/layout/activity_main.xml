
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="$ principle investment"
        android:height="120px"
        android:id="@+id/principleInvTxt"
        android:layout_gravity="right"
        android:textSize="24px"
        android:foregroundGravity="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="% interest"
        android:height="120px"
        android:id="@+id/interestTxt"
        android:layout_gravity="right"
        android:textSize="24px"
        android:foregroundGravity="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="# times compounded per year"
        android:height="120px"
        android:id="@+id/timesCompTxt"
        android:layout_gravity="right"
        android:textSize="24px"
        android:foregroundGravity="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="# years invested"
        android:height="120px"
        android:id="@+id/yearInvTxt"
        android:layout_gravity="right"
        android:textSize="24px"
        android:foregroundGravity="center" />
    <Button
        android:text="Calculate final Investment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="80px"
        android:textColor="#ff0d47a1"
        android:textSize="24px"
        android:id="@+id/calcBtn" />

    <TextView
        android:text="Final Investment is: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finalInvTxt"
        android:height="110px"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ff0d47a1"
        android:textSize="32px" />


</LinearLayout>