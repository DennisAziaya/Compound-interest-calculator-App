
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="$ principle investment"
        android:height="120px"
        android:id="@+id/principleInvTxt"
        android:layout_gravity="right"
        android:textSize="32px"
        android:foregroundGravity="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="% interest"
        android:height="120px"
        android:id="@+id/interestTxt"
        android:layout_gravity="right"
        android:textSize="32px"
        android:foregroundGravity="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="# times compounded per year"
        android:height="120px"
        android:id="@+id/timesCompTxt"
        android:layout_gravity="right"
        android:textSize="32px"
        android:foregroundGravity="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:hint="# years invested"
        android:height="120px"
        android:id="@+id/yearInvTxt"
        android:layout_gravity="right"
        android:textSize="32px"
        android:foregroundGravity="center"
        android:textColor="#fff3e5f5" />
    <Button
        android:text="Calculate final Investment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="80px"
        android:textColor="#ffe3f2fd"
        android:textSize="32px"
        android:id="@+id/calcBtn"
        android:background="#ff01579b" />

    <TextView
        android:text="final Investment "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/finalInvTxt"
        android:height="110px"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ff1e88e5"
        android:textSize="32px"
        android:textStyle="italic" />


</LinearLayout>